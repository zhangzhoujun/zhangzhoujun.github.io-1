<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.qm.module_juggle.bigpic.BigPicViewModel" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <com.qm.lib.widget.dim.AppTextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:banner_auto_loop="false"
            app:banner_infinite_loop="false" />

        <com.qm.lib.widget.dim.AppImageView
            android:id="@+id/save"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_66"
            android:background="@mipmap/home_save" />

    </RelativeLayout>
</layout>
