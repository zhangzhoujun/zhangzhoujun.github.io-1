<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280">

        <com.qm.lib.widget.dim.AppImageView
            android:id="@+id/icon_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.qm.lib.widget.dim.AppEditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/home_login_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16" />

        <com.qm.lib.widget.dim.AppEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/account"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/home_login_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:inputType="numberPassword"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/round_bg"
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.qm.lib.widget.dim.AppImageView
                    android:id="@+id/round_back"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@drawable/lib_round" />

                <com.qm.lib.widget.dim.AppImageView
                    android:id="@+id/round"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@drawable/lib_gouzi" />

            </RelativeLayout>


            <com.qm.lib.widget.dim.AppTextView
                android:id="@+id/des1"
                style="@style/style_text_content_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text='我已阅读并同意' />

            <com.qm.lib.widget.dim.AppTextView
                android:id="@+id/des2"
                style="@style/style_text_content_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text='\"隐私政策\"'
                android:textStyle="bold" />

            <com.qm.lib.widget.dim.AppTextView
                android:id="@+id/des3"
                style="@style/style_text_content_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text='和' />

            <com.qm.lib.widget.dim.AppTextView
                android:id="@+id/des4"
                style="@style/style_text_content_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text='\"用户协议\"'
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</layout>