<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jump_layout"
    android:layout_width="@dimen/dp_253"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_127"
        android:background="@mipmap/goods_jump_bg_top">

        <com.qm.lib.widget.dim.AppTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="正在跳转淘宝"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <com.qm.lib.widget.dim.AppImageView
            android:id="@+id/icon_left"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_65"
            android:background="@mipmap/goods_app" />

        <com.qm.lib.widget.dim.AppImageView
            android:id="@+id/icon_right"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@mipmap/goods_jump_tb" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_right"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/icon_right"
            android:layout_toRightOf="@+id/icon_left"
            android:max="100"
            android:maxHeight="@dimen/dp_8"
            android:progressDrawable="@drawable/goods_seekbar_bg"
            android:splitTrack="false"
            android:thumb="@mipmap/goods_jump_cart" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_178"
        android:background="@mipmap/goods_jump_bg_bottom">

        <com.qm.lib.widget.dim.AppTextView
            android:id="@+id/bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:text="预计可省"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <com.qm.lib.widget.dim.AppTextView
            android:id="@+id/bottom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="¥12"
            android:textColor="#DBB068"
            android:textSize="@dimen/sp_30"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="@dimen/dp_194"
            android:layout_height="@dimen/dp_49"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@mipmap/goods_jump_price_bg">

            <com.qm.lib.widget.dim.AppTextView
                android:id="@+id/bottom_left_price"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_49"
                android:gravity="center"
                android:text="¥12"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bottom_left_price"
                android:gravity="center"
                android:orientation="vertical">

                <com.qm.lib.widget.dim.AppTextView
                    android:id="@+id/bottom_right_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_18"
                    android:text="优惠券使用时间"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_13" />

                <com.qm.lib.widget.dim.AppTextView
                    android:id="@+id/bottom_right_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_15"
                    android:text="11.07-11.14"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>